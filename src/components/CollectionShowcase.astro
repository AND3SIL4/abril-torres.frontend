---
// Collection showcase section
---

<section class="py-20 md:py-32">
  <div class="mx-auto max-w-7xl px-4 sm:px-6 lg:px-8">
    <div class="grid md:grid-cols-2 gap-6">
      <!-- Large featured item -->
      <div class="md:row-span-2 relative aspect-[3/4] overflow-hidden rounded-sm group">
        <img
          src="/elegant-woman-holding-burgundy-recycled-fabric-han.jpg"
          alt="Collection highlight"
          class="w-full h-full object-cover group-hover:scale-105 transition-transform duration-700"
        />
        <div class="absolute inset-0 bg-gradient-to-t from-primary/80 via-primary/20 to-transparent"></div>
        <div class="absolute bottom-0 left-0 right-0 p-8 text-primary-foreground">
          <h3 class="text-3xl md:text-4xl font-light mb-2">Spring Collection</h3>
          <p class="text-lg mb-4 opacity-90">Fresh designs for the new season</p>
          <button class="text-sm font-medium underline underline-offset-4 hover:no-underline">
            Discover Now
          </button>
        </div>
      </div>

      <!-- Two smaller items -->
      <div class="relative aspect-[3/2] overflow-hidden rounded-sm group">
        <img
          src="/close-up-recycled-fabric-texture-dusty-rose.jpg"
          alt="Craftsmanship detail"
          class="w-full h-full object-cover group-hover:scale-105 transition-transform duration-700"
        />
        <div class="absolute inset-0 bg-gradient-to-t from-foreground/60 to-transparent"></div>
        <div class="absolute bottom-0 left-0 right-0 p-6 text-background">
          <h3 class="text-2xl font-light mb-1">The Craft</h3>
          <p class="text-sm opacity-90">Behind every stitch</p>
        </div>
      </div>

      <div class="relative aspect-[3/2] overflow-hidden rounded-sm group">
        <img
          src="/sustainable-fashion-studio-workspace-natural-light.jpg"
          alt="Our atelier"
          class="w-full h-full object-cover group-hover:scale-105 transition-transform duration-700"
        />
        <div class="absolute inset-0 bg-gradient-to-t from-foreground/60 to-transparent"></div>
        <div class="absolute bottom-0 left-0 right-0 p-6 text-background">
          <h3 class="text-2xl font-light mb-1">Our Atelier</h3>
          <p class="text-sm opacity-90">Where magic happens</p>
        </div>
      </div>
    </div>
  </div>
</section>
