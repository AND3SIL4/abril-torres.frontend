---
// Collection showcase section
---

<section class="py-20 md:py-32">
  <div class="mx-auto max-w-7xl px-4 sm:px-6 lg:px-8">
    <div class="grid md:grid-cols-2 gap-6">
      <!-- Large featured item -->
      <div class="md:row-span-2 relative aspect-[3/4] overflow-hidden rounded-sm group">
        <img
          src="/images/coleccion-primavera.webp"
          alt="Collection highlight"
          class="w-full h-full object-cover group-hover:scale-105 transition-transform duration-700"
        />
        <div class="absolute inset-0 bg-gradient-to-t from-primary/80 via-primary/20 to-transparent"></div>
        <div class="absolute bottom-0 left-0 right-0 p-8 text-primary-foreground">
           <h3 class="text-3xl md:text-4xl font-light mb-2">Colección Primavera</h3>
           <p class="text-lg mb-4 opacity-90">Diseños frescos para la nueva temporada</p>
           <button class="text-sm font-medium underline underline-offset-4 hover:no-underline">
             Descubrir Ahora
           </button>
        </div>
      </div>

      <!-- Two smaller items -->
      <div class="relative aspect-[3/2] overflow-hidden rounded-sm group">
        <img
          src="/images/ovillos-tela.webp"
          alt="Craftsmanship detail"
          class="w-full h-full object-cover group-hover:scale-105 transition-transform duration-700"
        />
        <div class="absolute inset-0 bg-gradient-to-t from-foreground/60 to-transparent"></div>
        <div class="absolute bottom-0 left-0 right-0 p-6 text-background">
           <h3 class="text-2xl font-light mb-1">El Arte</h3>
           <p class="text-sm opacity-90">Detrás de cada puntada</p>
        </div>
      </div>

      <div class="relative aspect-[3/2] overflow-hidden rounded-sm group">
        <img
          src="/images/nuestro-taller.webp"
          alt="Our atelier"
          class="w-full h-full object-cover group-hover:scale-105 transition-transform duration-700"
        />
        <div class="absolute inset-0 bg-gradient-to-t from-foreground/60 to-transparent"></div>
        <div class="absolute bottom-0 left-0 right-0 p-6 text-background">
           <h3 class="text-2xl font-light mb-1">Nuestro Taller</h3>
           <p class="text-sm opacity-90">Donde ocurre la magia</p>
        </div>
      </div>
    </div>
  </div>
</section>
